{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": [
    "lib/**/*.js",
    "lib/**/*.ts",
    "plugins/**/*.js",
    "plugins/**/*.ts",
    "test/cli/**/*.js",
    "test/cli/**/*.ts"
  ],
  "exclude": ["dist", "node_modules", "**/*.test.js", "**/*.test.ts"]
}
